<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Login</title>

      <%= stylesheet_link_tag    'application' %>
      <%= stylesheet_link_tag    'admins_backoffice' %>

    <!-- Custom fonts for this template-->
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Bem Vindo!</h1>
                                    </div>
                                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                    <form class="user">                                    
                                        <div class="form-group">
                                                <%= f.email_field :email, autofocus: true, class:"form-control form-control-user",
                                                placeholder:"Insira seu e-mail..." %>
                                        </div>
                                        <div class="form-group">
                                                <%= f.password_field :password, class:"form-control form-control-user",
                                                placeholder:"Insira sua senha..." %>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                              <% if devise_mapping.rememberable? %>
                                                <div class="field">
                                                  <%= f.check_box :remember_me, class:"custom-control-input" %>
                                                  <%= f.label :remember_me, class:"custom-control-label" %>
                                                </div>
                                              <% end %>
                                            </div>
                                        </div>
                                          <div>
                                            <%= f.submit "Log in", class:"btn btn-primary btn-user btn-block" %>
                                          </div>
                                        <hr>
                                    </form>
                                    <% end %>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <%= render "admins/shared/links", class:"small" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'admins_backoffice' %>

</body>

</html>